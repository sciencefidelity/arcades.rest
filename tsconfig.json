{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": [
      "bcryptjs",
      "glob",
      "jest",
      "jsonwebtoken",
      "koa",
      "koa-basic-auth",
      "koa-compress",
      "koa-pug",
      "koa-router",
      "koa-session",
      "koa-static",
      "koa-static-cache",
      "mongoose",
      "node",
      "pug",
      "underscore"
    ],
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
