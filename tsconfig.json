{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "types": [
      "node",
      "koa",
      "koa-router",
      "koa-pug",
      "koa-static",
      "mongoose"
    ],
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ]
}
