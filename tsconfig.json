{
  "include": ["./**/*", "./**/.*"],
  "exclude": ["./dist/**/*"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": ".dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": [
      "bcryptjs",
      "glob",
      "jest",
      "jsonwebtoken",
      "koa",
      "koa-router",
      "module-alias",
      "mongoose",
      "node",
      "underscore"
    ],
    "paths": {
      "*": ["types/*", "*"],
      "controllers/*": ["src/controllers/*"],
      "middlewares/*": ["src/middlewares/*"],
      "models/*": ["src/models/*"],
      "routes/*": ["src/routes/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
