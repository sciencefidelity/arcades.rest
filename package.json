{
  "name": "arcades",
  "private": true,
  "description": "The Arcades Project API",
  "version": "0.1.0",
  "author": "Matt Cook <matt@sciencefidelity.co.uk>",
  "main": "dist/app.js",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/sciencefidelity/arcades.rest.git"
  },
  "bugs": {
    "url": "https://github.com/sciencefidelity/arcades.rest/issues"
  },
  "scripts": {
    "dev": "nodemon --config nodemon.json src/app.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/app.ts",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:eslint": "eslint \"**/*.{ts,js}\"",
    "lint:prettier": "prettier --check \"**/*.{ts,js,json,md,yml}\"",
    "lint:json": "find . -name node_modules -prune -false -o -type f -name '*.json' -exec node -e 'require(\"{}\")' \\;",
    "fix": "concurrently 'yarn:fix:*'",
    "fix:eslint": "eslint --fix \"**/*.{ts,js}\"",
    "fix:prettier": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "prebuild": "yarn fix",
    "build": "tsc",
    "prestart": "yarn build",
    "start": "node .",
    "test": "jest"
  },
  "_moduleAliases": {
    "controllers": "src/controllers",
    "middlewares": "src/middlewares",
    "models": "src/models",
    "routes": "src/routes",
    "utils": "src/utils/*"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-compress": "^5.1.0",
    "koa-json-error": "^3.1.2",
    "koa-jwt": "^4.0.3",
    "koa-router": "^10.1.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.2.9",
    "underscore": "^1.13.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.13.4",
    "@types/koa-json-error": "^3.1.4",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.4.4",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.23",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "add": "^2.0.6",
    "concurrently": "^7.1.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-koa": "^2.0.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
