    "koa-json-error": "^3.1.2",
    "koa-jwt": "^4.0.1",
    "koa-pug": "^5.0.0",
    "koa-router": "^10.0.0",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "koa-static-cache": "^5.1.4",
    "mongoose": "^5.12.13",
    "npm": "^7.16.0",
    "pug": "^3.0.2",
    "underscore": "^1.13.1"
  },
