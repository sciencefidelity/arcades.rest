{
  "name": "arcades",
  "private": true,
  "description": "The Arcades Project API",
  "version": "0.1.0",
  "author": "Matt Cook <matt@sciencefidelity.co.uk>",
  "main": "dist/app.js",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/sciencefidelity/arcades.rest.git"
  },
  "bugs": {
    "url": "https://github.com/sciencefidelity/arcades.rest/issues"
  },
  "scripts": {
    "dev": "nodemon --config nodemon.json src/app.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/app.ts",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:js": "eslint --format=pretty '**/*.{ts,js}'",
    "lint:format": "prettier --check '**/*.{ts,js,json,md,yml}'",
    "lint:json": "find . -name node_modules -prune -false -o -type f -name '*.json' -exec node -e 'require(\"{}\")' \\;",
    "fix": "concurrently 'yarn:fix:*'",
    "fix:js": "eslint --format=pretty --fix '**/*.{ts,js}'",
    "fix:format": "prettier --write **/*.{ts,js,json,md,yml}'",
    "prebuild": "yarn fix",
    "build": "tsc && tsc-alias",
    "prestart": "yarn build",
    "start": "node .",
    "test": "jest"
  },
  "_moduleAliases": {
    "controllers": "src/controllers",
    "middlewares": "src/middlewares",
    "models": "src/models",
    "routes": "src/routes",
    "utils": "src/utils/*"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-compress": "^5.1.0",
    "koa-json-error": "^3.1.2",
    "koa-jwt": "^4.0.3",
    "koa-router": "^12.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "^6.4.6",
    "tsc-alias": "^1.7.0",
    "underscore": "^1.13.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.13.5",
    "@types/koa-json-error": "^3.1.4",
    "@types/koa-router": "^7.4.4",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.0.6",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
