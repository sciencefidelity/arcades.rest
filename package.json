{
  "name": "arcades",
  "private": true,
  "description": "The Arcades Project API",
  "version": "0.0.1",
  "author": "Matt Cook <sciencefidelity@hotmail.com>",
  "main": "dist/app.js",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "nodemon --config nodemon.json src/app.ts & yarn sass:watch",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/app.ts",
    "sass:watch": "sass --watch src/public/scss/style.scss src/public/css/style.css",
    "sass:build": "sass src/public/scss/style.scss src/public/css/style.css",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "yarn build",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-pug": "^5.0.0",
    "koa-router": "^10.0.0",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "mongoose": "^5.12.12",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/koa": "^2.13.3",
    "@types/koa-pug": "^4.0.0",
    "@types/koa-router": "^7.4.2",
    "@types/koa-session": "^5.10.3",
    "@types/koa-static": "^4.0.1",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^15.6.1",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2"
  }
}
