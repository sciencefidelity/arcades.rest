{
  "name": "arcades",
  "private": true,
  "description": "The Arcades Project API",
  "version": "0.1.0",
  "author": "Matt Cook <matt@sciencefidelity.co.uk>",
  "main": "dist/app.js",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/sciencefidelity/arcades.rest.git"
  },
  "bugs": {
    "url": "https://github.com/sciencefidelity/arcades.rest/issues"
  },
  "scripts": {
    "dev": "nodemon --config nodemon.json src/app.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/app.ts",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:eslint": "eslint \"**/*.{ts,js}\"",
    "lint:prettier": "prettier --check \"**/*.{ts,js,json,md,yml}\"",
    "lint:json": "find . -name node_modules -prune -false -o -type f -name '*.json' -exec node -e 'require(\"{}\")' \\;",
    "fix": "concurrently 'yarn:fix:*'",
    "fix:eslint": "eslint --fix \"**/*.{ts,js}\"",
    "fix:prettier": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "prebuild": "yarn fix",
    "build": "tsc",
    "prestart": "yarn build",
    "start": "node .",
    "test": "jest"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-compress": "^5.0.1",
    "koa-json-error": "^3.1.2",
    "koa-jwt": "^4.0.3",
    "koa-router": "^10.0.0",
    "mongoose": "^5.13.3",
    "underscore": "^1.13.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/koa": "^2.13.3",
    "@types/koa-json-error": "^3.1.2",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.4.2",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^16.10.1",
    "@types/underscore": "^1.11.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-koa": "^2.0.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
